<h3>New post</h3>

<%= render 'shared/errors', obj: @post %>


<%= form_for @post do |f| %>

		<%= f.label :title %>
		<%= f.text_field :title %>
		<br/>
		<%= f.label :url %>
		<%= f.text_field :url %>
		<br/>
		<%= f.label :description %>
		<%= f.text_area :description, rows: "3" %>
		<br/>
		<%= f.label :category_ids, "Categories" %>
		<%= f.collection_select(:category_ids, Category.all, :id, :name, {}, multiple: true) %>		
		
		<br/>
		<%= f.submit class: "btn btn-primary" %>

	<% end %>