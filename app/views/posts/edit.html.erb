<h3>Edit post</h3>

<%= form_for @post do |f| %>

		<%= f.label :title %>
		<%= f.text_field :title %>
		<br/>
		<%= f.label :url %>
		<%= f.text_field :url %>
		<br/>
		<%= f.label :description %>
		<%= f.text_area :description, rows: "3" %>
		<br/>
		<%= f.submit class: "btn btn-primary" %>

	<% end %>